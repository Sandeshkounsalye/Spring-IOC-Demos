<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- <constructor-arg> is used to invoke parameterized constructor, to pass 
		parameter -->
	<!-- the attributes of <constructor arg> are 1. name name is used to provide 
		the name 2. value is ued to provide value -->
	<!-- index is used to provide index perticular of parameter based on their 
		occurence -->
	<!-- type is used to provide type of parameter -->
	<!-- ref is used to provide ref of user defined object -->

	<bean id="empObj" class="com.entity.Employee">
		<constructor-arg name="empId" value="101" type="int"
			index="0"></constructor-arg>
		<constructor-arg name="empName" value="sandesh"
			type="String" index="1"></constructor-arg>
		<constructor-arg name="empSalery" value="65000"
			type="double" index="2"></constructor-arg>
	</bean>


</beans>